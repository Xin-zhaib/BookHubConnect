doctype html
html
  head
    title BookHubConnect
    link(rel='stylesheet', href='/assets/css/bootstrap.min.css')
    script(src='/assets/js/jquery.min.js')
    script(src='/assets/js/bootstrap.min.js')
    style.
      body {
        width: 100%;
        background: #f2f2f2;
      }
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container
        a.navbar-brand(href='/book/list') BookHubConnect
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.ml-auto
            li.nav-item
              a.nav-link(href='/book/list') Home
            if user != null && user.role == 1
              li.nav-item
                a.nav-link(href='/book/add') Add Book
              li.nav-item
                a.nav-link(href='/book/myself') My Book
            if user != null
              li.nav-item
                a.nav-link(href='/user/logout') Logout
            if user == null
              li.nav-item
                a.nav-link(href='/user/login') Login
              li.nav-item
                a.nav-link(href='/user/register') Register
    block content
